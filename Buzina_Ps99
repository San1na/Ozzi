local OrionLib = loadstring(game:HttpGet("https://twix.cyou/Orion.txt", true))()
local Window = OrionLib:MakeWindow({Name = "üíïBuzinaüòò", TestMode = true, SaveConfig = true, ConfigFolder = "Buzina"})

local Tab = Window:MakeTab({
	Name = "Home",
	Icon = "rbxassetid://4483345998",
	TestersOnly = false
})

local Section = Tab:AddSection({
	Name = "Open"
})

local autoRolling = false
local rollingTask

Tab:AddToggle({
	Name = "AutoUnpack Card",
	Default = false,
	Callback = function(Value)
		autoRolling = Value

		if autoRolling then
		    rollingTask = task.spawn(function()
		        local ReplicatedStorage = game:GetService("ReplicatedStorage")
		        local Save = require(ReplicatedStorage.Library.Client.Save)
		        local RNS = game:GetService("ReplicatedStorage"):WaitForChild("Network")

		        while autoRolling do
		            local Inventory: any = Save.Get()["Inventory"] -- –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω–≤–µ–Ω—Ç–∞—Ä—è –ø–µ—Ä–µ–¥ –∫–∞–∂–¥–æ–π –∏—Ç–µ—Ä–∞—Ü–∏–µ–π
		            for i, v in pairs(Inventory.Lootbox) do
		                if v.id == "Retro Pack" then
		                    local args = {
		                        [1] = i,
		                        [2] = 8
		                    }

		                    RNS:WaitForChild("Lootbox: Open"):InvokeServer(unpack(args))
		                end
		            end
		            task.wait(0.5)
		        end
		    end)
		else
		    if rollingTask then
		        task.cancel(rollingTask)
		    end
		end
	end
})

Tab:AddButton({
	Name = "FastOpen Method",
	Callback = function()
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local directory = ReplicatedStorage:FindFirstChild("__DIRECTORY")

if directory then
    local lootboxes = directory:FindFirstChild("Lootboxes")
    if lootboxes then
        local cardPacks = lootboxes:FindFirstChild("CardPacks")
        if cardPacks then
            local retroPack = cardPacks:FindFirstChild("Retro Pack")
            if retroPack then
                local model = retroPack:FindFirstChild("Model")
                if model then
                    local objectsToDelete = {
                        "InitialPoses",
                        "AnimSaves",
                        "cardpack_back_A_mesh",
                        "cardpack_back_B_mesh",
                        "cardpack_front_mesh",
                        "RootPart"
                    }
                    
                    for _, objName in ipairs(objectsToDelete) do
                        local obj = model:FindFirstChild(objName)
                        if obj then
                            obj:Destroy()
                        end
                    end
                end
            end
        end
    end
end
  	end    
})
